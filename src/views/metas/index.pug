extends ../layout

block content
  ol.breadcrumb
    li.breadcrumb-item.active 
        a(href="/metas") API 관리

  .card.mb-3
    .card-header
      i.fas.fa-table
        span.ml-3 API 목록

    .card-body
      a.mb-3.btn.btn-primary(href="/metas/new") 파일 업로드
      .table-responsive
        table.table.table-bordered(width='100%' cellspacing='0')
          thead
              tr
                th id  
                th API명
                th Rows
                th 확장자
                th 상태
          tbody
            each api in apis
              tr
                td #{api.id}
                td 
                  a(href=`/metas/${api.id}`) #{api.title}
                td #{api.rowCounts}
                td #{api.extension}
                td #{api.isActive ? '활성':'비활성'}
