extends ../layout

block content
  ol.breadcrumb
    li.breadcrumb-item.active 
        a(href="/applications") Application 관리

  .card.mb-3
    .card-header
      i.fas.fa-table
        span.ml-3 Application 목록

    .card-body
      a.mb-3.btn.btn-primary(href="/applications/new") Application 생성
      .table-responsive
        table.table.table-bordered(width='100%' cellspacing='0')
          thead
              tr
                th id  
                th namespace
                th title
                th description
                th status
          tbody
            each application in applications
              tr
                td #{application.id}
                td #{application.nameSpace}
                td 
                  a(href=`/applications/${application.id}`) #{application.title}
                td #{application.description}
                td -