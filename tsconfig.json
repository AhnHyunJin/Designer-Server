{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "composite": true,
      "types": ["node"]
   },
   "typeRoots": [
      "./@types",
      "./node_modules/@types",
      "./src/@types"
   ],
   "exclude": [
      "./test"
   ],
   "include": [ 
      "src/**/*",
      "./src/routes/swagger.json"
   ]
}